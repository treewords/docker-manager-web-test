# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{js,jsx,json,yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Package files
[package.json]
indent_style = space
indent_size = 2
