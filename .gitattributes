*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.sh text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerignore text eol=lf
docker-compose*.yml text eol=lf

# Documentation
*.txt text eol=lf
LICENSE text eol=lf
